<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.StudyBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/start</item>
        <item name="colorPrimaryVariant">@color/center</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/start</item>
        <item name="colorSecondaryVariant">@color/center</item>
        <item name="colorOnSecondary">@color/end</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/nofill</item>
    </style>

    <style name="Theme.StudyBuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudyBuddy.AppCompact" parent="Theme.AppCompat">
        <item name="elevation">4dp</item>
    </style>
</resources>