<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.StudyBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/start</item>
        <item name="colorPrimaryVariant">@color/center</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/start</item>
        <item name="colorSecondaryVariant">@color/center</item>
        <item name="colorOnSecondary">@color/end</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/nofill</item>

    </style>

    <style name="yellowBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/signBtnTxt</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textSize">30sp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="whiteBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/signBtnTxt</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>
</resources>