        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/onFocused" />
            <stroke android:width="1dp" android:color="#999999" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/nofill" />
            <stroke android:width="1dp" android:color="#999999" />
        </shape>
    </item>
</selector>