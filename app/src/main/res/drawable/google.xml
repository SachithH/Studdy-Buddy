<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#990000"
                android:endColor="#E13D3D"
                android:angle="270"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#990000"
                android:endColor="#E13D3D"
                android:angle="90"/>
        </shape>
    </item>
</selector>