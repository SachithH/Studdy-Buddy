<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".SignUpActivity"
    android:background="@drawable/gradient_background">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Username-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUpUsername"
                android:layout_width="@dimen/sign_input_width"
                android:layout_height="@dimen/sign_input_height"
                android:autofillHints="Eg: Malith"
                android:background="@drawable/inputs"
                android:hint="Enter Username"
                android:inputType="text"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
            <!--Username End-->

            <!--Email-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUpEmail"
                android:layout_width="@dimen/sign_input_width"
                android:layout_height="@dimen/sign_input_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputs"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
            <!--Email End-->

            <!--Password-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUpPassword"
                android:layout_width="@dimen/sign_input_width"
                android:layout_height="@dimen/sign_input_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputs"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
            <!--Password End-->

            <!--Retype Password-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUpRetypePassword"
                android:layout_width="@dimen/sign_input_width"
                android:layout_height="@dimen/sign_input_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputs"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/gray" />
            <!--Retype Password End-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUpContacts"
                android:layout_width="@dimen/sign_input_width"
                android:layout_height="@dimen/sign_input_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputs"
                android:hint="Enter Your Phone Number"
                android:inputType="phone"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:maxLength="10"/>

            <!--Sign Up Button-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/SignUpBtn"
                android:layout_width="@dimen/sign_input_width"
                android:layout_height="@dimen/sign_input_height"
                android:layout_marginTop="35dp"
                android:background="@drawable/signup_btns"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/sign_btn_fonts" />

            <!--Sign Up Button End-->

            <!--Facebook Button-->
            <!--Facebook Button End-->

            <!--Google Button-->
            <!--Google Button-->
        </androidx.appcompat.widget.LinearLayoutCompat>
    <!--Linear Layout End-->


    <com.google.android.material.progressindicator.CircularProgressIndicator
    android:id="@+id/progress_circular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:indeterminate="true"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>