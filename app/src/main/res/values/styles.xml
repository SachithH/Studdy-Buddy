<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Themes-->
    <style name="Theme.StudyBuddy.Default" parent="Theme.StudyBuddy">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.StudyBuddy.Light" parent="Theme.StudyBuddy.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/centerLight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryInverse">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.StudyBuddy.Dark" parent="Theme.StudyBuddy.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#131313</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryInverse">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

<!--    Text style-->

    <style name="textColor">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.BackgroundOnly" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/BtnShape</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="whiteBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/signBtnTxt</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAppearance">@style/gradesText</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="shapeAppearance">@style/BtnShape</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="BtnShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
    </style>

    <style name="ganganeeText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/fm_ganganee</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="malithiText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/fm_malithi</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sarasaviText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/sarasavi_unicode</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="unGanganeeText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/un_ganganee</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mcqAnswerText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/un_ganganee</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="gradesText" parent="textColor">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="gilroy">
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="Grades" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/fm_ganganee</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/end</item>
    </style>
    <style name="SyllabusText" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    
    <style name="inputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/inputShape</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="boxStrokeColor">@color/inputs</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="passwordToggleTint">?attr/colorOnPrimary</item>
    </style>

    <style name="sysBackInputBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
    </style>

    <style name="searchBar" parent="Widget.AppCompat.EditText">
        <item name="background">@color/nofill</item>
    </style>

    <style name="searchBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="inputShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="qualityBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/signBtnTxt</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="rippleColor">?attr/colorAccent</item>
    </style>

    <style name="mcqDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="myWalletBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/signBtnTxt</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerSize">20dp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

</resources>