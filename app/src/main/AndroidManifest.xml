<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.learntv.studybuddy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyBuddy"
        android:usesCleartextTraffic="true">
        <activity
            android:configChanges="orientation|screenSize|layoutDirection"
            android:name=".otpValidate"
            android:exported="false" />
        <activity
            android:name=".GoogleLogin"
            android:exported="false" />
        <activity
            android:name=".MCQActivity"
            android:exported="false" />
        <activity
            android:name=".PlayingVideoActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:exported="false" />
        <activity
            android:name=".VODListActivity"
            android:exported="false"
            android:label="@string/title_activity_vodlist"
            android:theme="@style/Theme.StudyBuddy.NoActionBar" />
        <activity
            android:name=".SubjectsActivity"
            android:exported="false" />
        <activity
            android:name=".SyllabusActivity"
            android:exported="false" />
        <activity
            android:name=".GradesActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>